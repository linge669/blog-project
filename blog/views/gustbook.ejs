<!doctype html>
<html lang="zh">

	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<title><%-title%></title>
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<link rel="stylesheet" type="text/css" href="/stylesheets/index.css" media="all" />
		<link rel="stylesheet" type="text/css" href="/stylesheets/base.css"/>
		<script type='text/javascript' src='/javascripts/jquery.min.js'></script>
		<script src="/javascripts/xheditor/xheditor-1.2.2.min.js" type="text/javascript" charset="utf-8"></script>
    	<script src="/javascripts/xheditor/xheditor_lang/zh-cn.js" type="text/javascript" charset="utf-8"></script>
    	<script type="text/javascript" src="/javascripts/fwb.js"charset="utf-8"></script>
	</head>

	<body class="home blog custom-background round-avatars">
		<%- include('header.ejs')%>
		
		<div id="main" class="content">
			<div class="container">
				<article id="post-2" class="js-gallery post-2 page type-page status-publish has-post-thumbnail hentry">
					<style>
						.meta {
							display: none;
						}
						
						#NextPrevPosts {
							margin: 0;
							visibility: hidden;
						}
					</style>
					<section class="post_content">
						<header class="post_header">
							<h1 class="post_title">游客留言</h1>
						</header>
						<div class="meta split split--responsive cf" style="display: block;">
							<div id="social-share"><span class="entypo-share"><i class="iconfont">&#xe614;</i>分享</span></div>
							<div class="slide">
								<a class="btn-slide" title="switch down"><i class="iconfont">&#xe615;</i>折叠留言区</a>
							</div>
						</div>
					</section>
				</article>
			</div>
			<svg id="upTriangleColor" width="100%" height="40" viewBox="0 0 100 102" preserveAspectRatio="none">
				<path d="M0 0 L50 100 L100 0 Z"></path>
			</svg>
			<div id="social">
				<ul>
					<li>
						<a href="" title="qzone" target="_blank"><i class="iconfont">&#xe67f;</i></a>
					</li>
					<li>
						<a href="" title="weibo" target="_blank"><i class="iconfont">&#xe680;</i></a>
					</li>
					<li>
						<a href="" title="douban" target="_blank"><i class="iconfont">&#xe681;</i></a>
					</li>
					<li>
						<a href="" title="twitter" target="_blank"><i class="iconfont">&#xe683;</i></a>
					</li>
				</ul>
			</div>
			<div id="panel">
				<div class="comment-area">
					
					<div id="respond" class="comment-respond">
						<h6 id="replytitle" class="comment-reply-title">
							<a rel="nofollow" id="cancel-comment-reply-link" href="" style="display:none;">取消</a>
						</h6>
						<div class="clearfix"></div>
						<%if(username){%>
						<p class="input-row">
							<i class="row-icon"></i>
							<textarea class="xheditor" style="height: 150px;width: auto;"id="lycon" placeholder="你不说两句吗？(°∀°)ﾉ……"></textarea>
							<button id="ly_btn" class="myBtn_line send">留言</button>
						</p>
						<%}else{%>
						<a href="/login" class="myBtn_line" style="margin: 20px;">请先登录，进行留言~~</a>
						
						<%}%>
									
					</div>
					
					<section class="comments">
						<div class="comments-main">
							<div id="comments-list-title"><span><%-count%></span> 条留言 </div>
							<div id="loading-comments">
								<div class="host">
									<div class="loading loading-0"></div>
									<div class="loading loading-1"></div>
									<div class="loading loading-2"></div>
								</div>
							</div>
							<ul class="commentwrap">
								<%if(data.length>0){%>
									<%data.map(function(item){%>
										<%if(name){%>
											<li class="comment even thread-even depth-1" id="li-comment-">
												<div id="comment-959" class="comment_body contents">
													<div class="profile">
														<a href=""><img src="/images/b8b61f04b19de2e728bfef9dcc4332d5.jpeg" class="gravatar" alt="vxZoo"></a>
													</div>
													<div class="main shadow">
														<div class="commentinfo">
															<section class="commeta">
																<div class="shang">
																	<h4 class="author"><a href="" target="_blank"><img src="/images/b8b61f04b19de2e728bfef9dcc4332d5.jpeg" class="gravatarsmall" alt="vxZoo"><%-item.username%></a></h4>
																</div>
															</section>
														</div>
														<div class="body">
															<p><%-item.ly_con%></p>
														</div>
														<div class="xia info">
															<span><time datetime="2018-02-16"><%-item.time%></time></span>
															<span><a href="" class="delete comment-reply-link" ly_id="<%-item._id%>">删除</a></span>
															<!--<a rel='nofollow' class='comment-reply-link' href='' onclick='return addComment.moveForm( "comment-959", "959", "respond", "2" )' aria-label='回复给vxZoo'>回复</a>-->
														</div>
													</div>
												</div>
											</li>
											
										<%}else{%>
											<li class="comment even thread-even depth-1" id="li-comment-">
												<div id="comment-959" class="comment_body contents">
													<div class="profile">
														<a href=""><img src="/images/b8b61f04b19de2e728bfef9dcc4332d5.jpeg" class="gravatar" alt="vxZoo"></a>
													</div>
													<div class="main shadow">
														<div class="commentinfo">
															<section class="commeta">
																<div class="shang">
																	<h4 class="author"><a href="" target="_blank"><img src="/images/b8b61f04b19de2e728bfef9dcc4332d5.jpeg" class="gravatarsmall" alt="vxZoo"><%-item.username%></a></h4>
																</div>
															</section>
														</div>
														<div class="body">
															<p><%-item.ly_con%></p>
														</div>
														<div class="xia info">
															<span><time datetime="2018-02-16"><%-item.time%></time></span>
															<!--<span><a rel='nofollow' class='comment-reply-link' href='' onclick='return addComment.moveForm( "comment-959", "959", "respond", "2" )' aria-label='回复给vxZoo'>回复</a></span>-->
														</div>
													</div>
												</div>
											</li>
										<%}%>
										
									<%})}else{%>
									<p>暂无留言</p>
									
								<%}%>
								<!-- #comment-## -->
							</ul>
							<nav id="comments-navi">
								<%if(page>4){%>
									<a class="prev page-numbers" href="/gustbook?pageNo=<%-pageNo<=1?1:parseInt(pageNo)-1%>">
									<</a>
									<a class='page-numbers' href='/gustbook?pageNo=1'>1</a>
									<a class='page-numbers' href='/gustbook?pageNo=2'>2</a>
									<span class="page-numbers dots">&hellip;</span>
									<a class='page-numbers' href='/gustbook?pageNo=<%-page%>-1'><%-page%>-1</a>
									<span aria-current='page' class='page-numbers'><%-page%></span>
									<a class="prev page-numbers" href="/gustbook?pageNo=<%-pageNo>=page?page:parseInt(pageNo)+1%>">
									></a>
								<%}else{%>
									<a class="prev page-numbers" href="/gustbook?pageNo=<%-pageNo<=1?1:parseInt(pageNo)-1%>">
									<</a>
									<%for(var i=1;i<=page;i++){%>
										<a class='page-numbers' href='/gustbook?pageNo=<%-i%>'><%-i%></a>
									<%}%>
									<a class="prev page-numbers" href="/gustbook?pageNo=<%-pageNo>=page?page:parseInt(pageNo)+1%>">
									></a>
								
								<%}%>
								
							</nav>
							
							</div>
						</div>
					</section>
				</div>
			</div>
			<svg id="dwTriangleColor" width="100%" height="40" viewBox="0 0 100 102" preserveAspectRatio="none">
				<path d="M0 0 L50 100 L100 0 Z"></path>
			</svg>
			<div class="wrapper">
			</div>
		</div>

		<%-include('foot.ejs')%>
			
		<script type="text/javascript">
			$(function(){
				$(".delete").on("click",function(){
					var ly_id=$(this).attr("ly_id");
					$.ajax({
						type:"post",
						url:"/users/delete",
						data:{
							ly_id:ly_id
						},
						success:function(data){
							console.log(data);
							location.reload();
						}
					});
				})
				
				
				var username="<%-username%>";
				$("#ly_btn").click(function(){
					$.ajax({
						type:"post",
						url:"/users/ly",
						data:{
							username:username,
							ly_con:$("#lycon").val()
						},
						success:function(data){
							if(data==1){
								alert("留言成功");
								location.reload();
							}
				}
			});
		})
	})
</script>
	
	</body>
			
			<script type='text/javascript' src='/javascripts/plugins.js'></script>
			<script type='text/javascript' src='/javascripts/script.js'></script>
			<script type='text/javascript' src='/javascripts/particles.js'></script>
			<script type='text/javascript' src='/javascripts/aos.js'></script>
			
</html>